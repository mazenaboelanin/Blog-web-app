<!-- Displaying Msg when article Created -->
<div class="container">

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <% flash.each do |name, msg| %>
            <div class='alert alert-<%="#{name}" %>  alert-dismissible fade show'role="alert">
                <strong> <%= msg %> </strong>
            <button type="button" class='close btn btn-outline-<%="#{name}"%> btn-sm' data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% end %>
        </div>
    </div>
</div>