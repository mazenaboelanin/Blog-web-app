<%= render 'shared/errors', obj: @article %>

<div class="row ">
    <div class="col-xs-12 ">
        <!-- Form for Adding New Article -->
        <%= form_for @article do |f| %>
        <div class="form-group mb-2 ">
            <div class="form-label col-sm-2 mb-2">
                <%= f.label :title %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
            </div>
        </div>

        <div class="form-group mb-2 ">
            <div class="form-label col-sm-2 mb-2">
                <%= f.label :description %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :description, class: "form-control",rows: 6, placeholder: "Description of Article", autofocus: true %>
            </div>
        </div>
        <div class="form-group mb-2">
            <div class="col-sm-10 mb-2">
                    <%= f.submit class: "btn btn-success " %>
            </div>
        </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to listing Articles", articles_path %> ] 
        </div>
    </div>
</div>