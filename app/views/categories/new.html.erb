<h1 class="text-center"> Create new category </h1>

<%= render 'shared/errors', obj: @category %>



<!-- Form for Adding New Article -->
<%= form_for @category do |f| %>
<div class="form-group mb-2 ">
    <div class="form-label col-sm-2 mb-2">
        <%= f.label :name %>
    </div>
    <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "category name", autofocus: true %>
    </div>
</div>

<div class="form-group mb-2">
    <div class="col-sm-10 mb-2">
            <%= f.submit class: "btn btn-success " %>
    </div>
</div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel request and return to listing Articles", articles_path %> ] 
</div>
